<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/upertextarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text=""
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="40sp">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textarea"
            android:textSize="40sp"
            android:text=""
            android:textColor="@color/white"
            android:textAlignment="viewEnd"
            android:padding="15dp">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >

        <ImageView
            android:id="@+id/imageclear"
            android:layout_width="70dp"
            android:layout_height="70dp"

            android:layout_marginStart="30dp"
            android:paddingBottom="15dp"
            app:srcCompat="@drawable/btn_ac"
            android:contentDescription="@string/todo" />
        <ImageView
            android:id="@+id/imagestart"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="25dp"
            android:paddingBottom="15dp"
            app:srcCompat="@drawable/btn_start_bracket"
            android:contentDescription="@string/todo" />
        <ImageView
            android:id="@+id/imageend"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="25dp"
            android:paddingBottom="15dp"
            app:srcCompat="@drawable/btn_end_bracket"
            android:contentDescription="@string/todo" />
        <ImageView
            android:id="@+id/imagedivid"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="25dp"
            android:paddingBottom="15dp"
            app:srcCompat="@drawable/btn_divide"
            android:contentDescription="@string/todo" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/image7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="30dp"
                android:paddingBottom="15dp"
                app:srcCompat="@drawable/btn_7"
                android:contentDescription="@string/todo" />
            <ImageView
                android:id="@+id/image8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                android:paddingBottom="15dp"
                app:srcCompat="@drawable/btn_8"
                android:contentDescription="@string/app_name" />
            <ImageView
                android:id="@+id/image9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                android:paddingBottom="15dp"
                app:srcCompat="@drawable/btn_9"
                android:contentDescription="@string/todo" />
            <ImageView
                android:id="@+id/imagemulti"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                android:paddingBottom="15dp"
                app:srcCompat="@drawable/btn_multiplication"
                android:contentDescription="@string/todo" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/image4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="30dp"
                android:paddingBottom="15dp"
                app:srcCompat="@drawable/btn_4"
                android:contentDescription="@string/todo" />
            <ImageView
                android:id="@+id/image5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                android:paddingBottom="15dp"
                app:srcCompat="@drawable/btn_5"
                android:contentDescription="@string/todo" />
            <ImageView
                android:id="@+id/image6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                android:paddingBottom="15dp"
                app:srcCompat="@drawable/btn_6"
                android:contentDescription="@string/todo" />
            <ImageView
                android:id="@+id/imageminus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                android:paddingBottom="15dp"
                app:srcCompat="@drawable/btn_minus"
                android:contentDescription="@string/todo" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/image1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="30dp"
                android:paddingBottom="15dp"
                app:srcCompat="@drawable/btn_1"
                android:contentDescription="@string/todo" />
            <ImageView
                android:id="@+id/image2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                android:paddingBottom="15dp"
                app:srcCompat="@drawable/btn_2"
                android:contentDescription="@string/todo" />
            <ImageView
                android:id="@+id/image3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                android:paddingBottom="15dp"
                app:srcCompat="@drawable/btn_3"
                android:contentDescription="@string/todo" />
            <ImageView
                android:id="@+id/imageplus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                android:paddingBottom="15dp"
                app:srcCompat="@drawable/btn_plus"
                android:contentDescription="@string/todo" />
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imagev"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="30dp"
            android:paddingBottom="15dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/btn_equal"
            android:contentDescription="@string/todo" />
        <ImageView
            android:id="@+id/image0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="25dp"
            android:paddingBottom="15dp"
            app:srcCompat="@drawable/btn_0"
            android:contentDescription="@string/todo" />
        <ImageView
            android:id="@+id/imagedot"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="25dp"
            android:paddingBottom="15dp"
            app:srcCompat="@drawable/btn_dot"
            android:contentDescription="@string/todo" />
        <ImageView
            android:id="@+id/imageequal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="25dp"
            android:paddingBottom="15dp"
            app:srcCompat="@drawable/btn_equal"
            android:contentDescription="@string/todo" />
    </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/viewtext"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:text=""
        android:textColor="#8c8c8c"
        android:textSize="24dp"
        />



</RelativeLayout>